---
const { currentPage, totalPages } = Astro.props;
---

<nav class="flex justify-center mt-8">
  {currentPage > 1 && (
    <a href={`/blog/page/${currentPage - 1}`} class="border rounded-lg transition-colors duration-300 ease-in-out px-3 py-1 mr-1 border-black/15 dark:border-white/20 hover:bg-black/5 hover:dark:bg-white/10 hover:border-black/20 hover:dark:border-white/30">
      Previous
    </a>
  )}
  {Array.from({ length: totalPages }, (_, i) => i + 1).map((page) => (
    <a
      href={`/blog/page/${page}`}
      class={`border-2 rounded-lg transition-colors duration-300 ease-in-out px-3 py-1 mx-1 ${page === currentPage ? 'border-black dark:border-white font-bold' : 'border-black/15 dark:border-white/20'} hover:bg-black/5 hover:dark:bg-white/10 hover:border-black/20 hover:dark:border-white/30`}
    >
      {page}
    </a>
  ))}
  {currentPage < totalPages && (
    <a href={`/blog/page/${currentPage + 1}`} class="border rounded-lg transition-colors duration-300 ease-in-out px-3 py-1 ml-1 border-black/15 dark:border-white/20 hover:bg-black/5 hover:dark:bg-white/10 hover:border-black/20 hover:dark:border-white/30">
      Next
    </a>
  )}
</nav>
